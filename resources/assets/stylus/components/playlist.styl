.playlist
    clear both
    .error
        display none

    &_item
        cursor pointer
        &.active
        &:hover
            background: brand-success
            background: -webkit-radial-gradient(brand-success, rgba(0,0,0,0))
            background: -o-radial-gradient(brand-success, rgba(0,0,0,0))
            background: -moz-radial-gradient(brand-success, rgba(0,0,0,0))
            background: radial-gradient(brand-success, rgba(0,0,0,0))




    .loader
        background #fff
        background -moz-linear-gradient(left, brand-success 10%, rgba(255, 255, 255, 0) 42%)
        background -webkit-linear-gradient(left, brand-success 10%, rgba(255, 255, 255, 0) 42%)
        background -o-linear-gradient(left, brand-success 10%, rgba(255, 255, 255, 0) 42%)
        background -ms-linear-gradient(left, brand-success 10%, rgba(255, 255, 255, 0) 42%)
        background linear-gradient(to right, brand-success 10%, rgba(255, 255, 255, 0) 42%)
        &:before
            background: rgba(0,0,0,0);
        &:after
            background #fff