.audiojs
    height 30px
    width 100%
    background player-background
    border none
    box-shadow none

    .play-pause
        display none

    .scrubber
        margin 0 10% 0 10%
        border none
        background player-background
        width 80%

        .progress
        .loaded
            height 30px
            width 100%

        .loaded
        .progress
            left 0
            top 50%
            height 10px
            margin-top -5px

        .progress
            background progress-background
            &:after
                width 5px
                height 10px
                border solid darken(brand-success, 50%) 1px
                background brand-success
                content ""
                float right

        .loaded
            background loaded-background


    .time
        position relative
        left 50%
        top 43%
        margin-left -54px
        border none

[v-cloak] {
  display none
}

.player
    &_contols
        margin-left auto
        margin-right auto
        max-width 210px

        &-prev
        &-pause
        &-next
            display inline-block
            cursor pointer
            padding-top 13px
            text-align center
            width 50px
            height 50px
            border solid darken(brand-success,50%) 1px
            border-radius 50%
            margin 0px 10px
            float left
            overflow hidden

            &:hover
                background brand-success

    .loader
        background #fff
        background -moz-linear-gradient(left, brand-success 10%, rgba(255, 255, 255, 0) 42%)
        background -webkit-linear-gradient(left, brand-success 10%, rgba(255, 255, 255, 0) 42%)
        background -o-linear-gradient(left, brand-success 10%, rgba(255, 255, 255, 0) 42%)
        background -ms-linear-gradient(left, brand-success 10%, rgba(255, 255, 255, 0) 42%)
        background linear-gradient(to right, brand-success 10%, rgba(255, 255, 255, 0) 42%)
        &:before
            background: rgba(0,0,0,0);
        &:after
            background #fff