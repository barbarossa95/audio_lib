.audiojs
    height 30px
    width 100%
    background player-background
    border none
    box-shadow none

    .play-pause
        display none

    .scrubber
        border none
        margin 0 10% 0 10%
        background player-background

        &
        .progress
        .loaded
            left 0
            width 80%
            height 30px

        .loaded
        .progress
            top 50%
            height 10px
            margin-top -5px

        .progress
            background progress-background
            &:after
                width 5px
                height 10px
                border solid darken(brand-success, 50%) 1px
                background brand-success
                content ""
                float right

        .loaded
            background loaded-background


    .time
        position relative
        left 50%
        top 43%
        margin-left -54px
        border none





.play-pause
.play-prev
.play-next
    display inline-block
    cursor pointer
    padding-top 10px
    padding-left 12px
    width 50px
    height 50px
    border solid darken(brand-success,50%) 1px
    border-radius 50%
    margin 0px 10px
    float left
    overflow hidden

    &:hover
        background brand-success

