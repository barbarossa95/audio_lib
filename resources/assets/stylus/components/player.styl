.audiojs
    height 300px
    width 100%
    background player-background

    .play-controls
        position relative
        display inline-block
        margin-left -105px
        margin-right auto
        float left
        left 50%
        top 82%

    .play-pause
    .play-prev
    .play-next
        display inline-block
        cursor pointer
        padding-top 10px
        padding-left 12px
        width 50px
        height 50px
        border solid darken(brand-success,50%) 1px
        border-radius 50%
        margin 0px 10px
        float left
        overflow hidden

        &:hover
            background brand-success

    .scrubber
        top 45%
        border-top none
        margin 0
        margin-left 10%
        margin-right 10%

        &
        .progress
        .loaded
            position relative
            left 0
            width 80%
            height 40px

        .loaded
            background #bebebe
            margin-top -62px

        .progress
            background #8E8E8E

    .time
        position relative
        left 50%
        top 43%
        margin-left -54px
        border none
